@model Brdy.Models.BirdsSeenViewModel

@{
    ViewData["Title"] = "Seen";
}

<h4>Sightings</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddToSeenList">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="CommonName" class="control-label" id="commonName"></label>
                <input asp-for="CommonName" class="form-control" />
                <span asp-validation-for="CommonName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ScientificName" class="control-label"></label>
                <input asp-for="ScientificName" class="form-control" />
                <span asp-validation-for="ScientificName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Latitude" class="control-label"></label>
                <input asp-for="Latitude" class="form-control" />
                <span asp-validation-for="Latitude" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Longitude"  class="control-label"></label>
                <input asp-for="Longitude"  class="form-control" />
                <span asp-validation-for="Longitude" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="AddToSeenList" class="btn btn-primary" style="background-color:burlywood;" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="SeenList">Go to Seen List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}