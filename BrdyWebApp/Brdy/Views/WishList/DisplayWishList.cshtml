@model IEnumerable<Brdy.Data.Models.WishList>

@{
    ViewData["Title"] = "Wish List";
}

<style>
    .table {
        color: white;
        background-color: black;
        opacity: 0.7;
    }
</style>

<h1>Wish List</h1>

<p>
    <a asp-action="Wish">Add a bird to your wish list</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CommonName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CommonName)
            </td>
            <td>
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
