@model Brdy.Models.SightingDetail
@{ ViewData["Title"] = "Home Page"; }

<style>
    @*h1 {
        position: relative;
        top: 50px;
    }*@
    @*.container {
        display: flex;
        justify-content: center;
    }
    form {
        position: relative;
        top: 250px;
        align-items: center;
        left: 250px;
    }
    .card {
        position: relative;
        top: 450px;
        display: inline-block;
    }
    input {
        border-radius: 10px;
    }*@
    .jumbotron {
        position: relative;
        top: 250px;
        background-color: #E9F1F7;
    }
</style>

@if (!User.Identity.IsAuthenticated)
{
    <div class="jumbotron">
        <h1 class="display-4">Welcome to BRDY!</h1>
        <p class="lead">Brdy Is a one stop shop for all your Bird watching needs. Join some of the elite Bird watching clubs!!!!</p>
        <hr class="my-4">

        <a class="btn btn-primary btn-lg" asp-area="Identity" asp-page="/Account/Register" role="button">Join Now</a>
    </div>
}

@if(User.Identity.IsAuthenticated)
{
    <h1>Welcome to Brdy!</h1>
}

